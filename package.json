{
	"name": "copilot-remote",
	"displayName": "Copilot Remote Control",
	"description": "Control VS Code Copilot Chat from your phone via HTTP API",
	"version": "0.1.0",
	"publisher": "sofi",
	"engines": {
		"vscode": "^1.95.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "copilot-remote.start",
				"title": "Start Remote Server",
				"category": "Copilot Remote"
			},
			{
				"command": "copilot-remote.stop",
				"title": "Stop Remote Server",
				"category": "Copilot Remote"
			},
			{
				"command": "copilot-remote.showQR",
				"title": "Show QR Code for Phone",
				"category": "Copilot Remote"
			}
		],
		"configuration": {
			"title": "Copilot Remote",
			"properties": {
				"copilotRemote.port": {
					"type": "number",
					"default": 3847,
					"description": "Port for the remote control server"
				},
				"copilotRemote.autoStart": {
					"type": "boolean",
					"default": true,
					"description": "Automatically start server when VS Code opens"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "bun run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "TIMING=1 eslint --cache .",
		"format": "prettier --write --cache --experimental-cli ."
	},
	"devDependencies": {
		"@types/node": "^20.19.30",
		"@types/qrcode": "^1.5.6",
		"@types/vscode": "^1.108.1",
		"@types/ws": "^8.18.1",
		"eslint": "^9.39.2",
		"eslint-config-mahir": "^1.1.5",
		"prettier": "^3.8.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"qrcode": "^1.5.4",
		"ws": "^8.19.0"
	}
}
